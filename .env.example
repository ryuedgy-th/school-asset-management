# Environment variables template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# Database
# For local development with PostgreSQL:
DATABASE_URL="postgresql://postgres:password@localhost:5432/school_asset_dev"

# For Neon (production/staging):
# DATABASE_URL="postgresql://user:pass@ep-xxx.neon.tech/dbname?sslmode=require"

# Authentication (CRITICAL: Generate strong random secrets!)
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-super-secret-auth-key-here-change-me

# Email Configuration
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password-here
EMAIL_FROM=your-email@gmail.com

# Encryption Secret (CRITICAL: Generate strong random secret!)
# Generate with: openssl rand -base64 32
ENCRYPTION_SECRET=your-encryption-secret-here-change-me

# Google OAuth (Get from Google Cloud Console)
# Used for both NextAuth login AND email sending
AUTH_GOOGLE_ID=your-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_SECRET=your-google-client-secret

# Optional: App URL for production
# NEXT_PUBLIC_APP_URL=https://your-domain.com

